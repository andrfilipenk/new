<?php 
/** @var \Core\Mvc\View $this */


/** @var \Module\Base\Model\Task[] $tasks */
function getFiltered($tasks, $status) {
    $result = [];
    foreach ($tasks as $task) {
        if ($task->status === $status) {
            $result[] = $task;
            continue;
        }
    }
    return $result;
}

