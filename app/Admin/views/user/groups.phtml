<?php 
/** @var \Core\Utils\Url $url */
$url = $this->getDI()->get('url'); 
?>
<h1>Group Management</h1>

<div class="mb-3">
    <a href="<?= $url->get('admin/groups/create') ?>" class="btn btn-primary">Create New Group</a>
    <a href="<?= $url->get('admin/user') ?>" class="btn btn-secondary">Back to Users</a>
</div>

<?php if (!empty($groups)): ?>
    <div class="row">
        <?php foreach ($groups as $group): ?>
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><?= htmlspecialchars($group->name) ?></h5>
                        <span class="badge badge-info"><?= htmlspecialchars($group->code) ?></span>
                    </div>
                    <div class="card-body">
                        <h6>Members (<?= count($group->users) ?>):</h6>
                        <?php if (count($group->users) > 0): ?>
                            <ul class="list-unstyled">
                                <?php foreach ($group->users as $user): ?>
                                    <li>
                                        <a href="<?= $url->get('admin/user/view/' . $user->id) ?>">
                                            <?= htmlspecialchars($user->name) ?>
                                        </a>
                                    </li>
                                <?php endforeach; ?>
                            </ul>
                        <?php else: ?>
                            <p class="text-muted">No members in this group.</p>
                        <?php endif; ?>
                        
                        <div class="mt-3">
                            <a href="<?= $url->get('admin/groups/delete/' . $group->id) ?>" 
                               class="btn btn-sm btn-danger" 
                               onclick="return confirm('Delete group and remove all members? This cannot be undone.')">
                                Delete Group
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        <?php endforeach; ?>
    </div>
<?php else: ?>
    <div class="alert alert-info">
        <p>No groups found. <a href="<?= $url->get('admin/groups/create') ?>">Create new group</a>.</p>
    </div>
<?php endif; ?>