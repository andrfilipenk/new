<?php 
/** @var \Core\Utils\Url $url */
$url = $this->getDI()->get('url'); 
?>
<h1>Manage Roles</h1>

<div class="mb-3">
    <a href="<?= $url->get('admin/access/create-role') ?>" class="btn btn-primary">Create New Role</a>
    <a href="<?= $url->get('admin/access') ?>" class="btn btn-secondary">Back to Overview</a>
</div>

<?php if (!empty($roles)): ?>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Display Name</th>
                <th>Description</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <?php foreach ($roles as $role): ?>
                <tr>
                    <td><?= htmlspecialchars($role->id) ?></td>
                    <td><code><?= htmlspecialchars($role->name) ?></code></td>
                    <td><?= htmlspecialchars($role->display_name ?? '') ?></td>
                    <td><?= htmlspecialchars($role->description ?? 'No description') ?></td>
                    <td><?= htmlspecialchars($role->created_at ?? 'N/A') ?></td>
                    <td>
                        <a href="<?= $url->get('admin/access/edit-role/' . $role->id) ?>" 
                           class="btn btn-sm btn-warning">Edit</a>
                        <a href="<?= $url->get('admin/access/delete-role/' . $role->id) ?>" 
                           class="btn btn-sm btn-danger" 
                           onclick="return confirm('Delete this role? This will remove all user assignments.')">Delete</a>
                    </td>
                </tr>
            <?php endforeach; ?>
        </tbody>
    </table>
<?php else: ?>
    <div class="alert alert-info">
        <p>No roles found. <a href="<?= $url->get('admin/access/create-role') ?>">Create your first role</a>.</p>
    </div>
<?php endif; ?>