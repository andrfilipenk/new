<?php 
/** @var \Core\Utils\Url $url */
$url = $this->getDI()->get('url'); 
?>
<h1>Holiday Requests</h1>

<div class="mb-3">
    <a href="<?= $url->get('admin/holidays/create') ?>" class="btn btn-primary">Create Request</a>
    <a href="<?= $url->get('admin/holidays/myrequests') ?>" class="btn btn-secondary">My Requests</a>
</div>

<?php if (!empty($requests)): ?>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>User</th>
                <th>Begin Date</th>
                <th>End Date</th>
                <th>Duration</th>
                <th>Status</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <?php foreach ($requests as $request): ?>
                <tr>
                    <td><?= htmlspecialchars($request->id) ?></td>
                    <td>
                        <?= htmlspecialchars($request->user->name) ?>
                    </td>
                    <td><?= htmlspecialchars($request->begin_date) ?></td>
                    <td><?= htmlspecialchars($request->end_date) ?></td>
                    <td><?= $request->getDurationDays() ?> days</td>
                    <td>
                        <?php if ($request->isGranted()): ?>
                            <span class="badge badge-success">Granted</span>
                        <?php else: ?>
                            <span class="badge badge-warning">Pending</span>
                        <?php endif; ?>
                    </td>
                    <td><?= htmlspecialchars($request->created_at ?? 'N/A') ?></td>
                    <td>
                        <a href="<?= $url->get('admin/holidays/manage/' . $request->id) ?>" 
                           class="btn btn-sm btn-info">Manage</a>
                        <a href="<?= $url->get('admin/holidays/delete/' . $request->id) ?>" 
                           class="btn btn-sm btn-danger" 
                           onclick="return confirm('Delete this holiday request?')">Delete</a>
                    </td>
                </tr>
            <?php endforeach; ?>
        </tbody>
    </table>
<?php else: ?>
    <div class="alert alert-info">
        <p>No holiday requests found.</p>
    </div>
<?php endif; ?>